<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_participant"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile_placeholder"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tv_participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Peserta"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toEndOf="@id/img_participant"
        android:layout_alignTop="@id/img_participant" />

    <TextView
        android:id="@+id/tv_participant_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mendaftar seminar ..."
        android:layout_below="@id/tv_participant_name"
        android:layout_toEndOf="@id/img_participant"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tv_participant_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_participant_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/tv_participant_event"
        android:layout_marginTop="8dp" />

</RelativeLayout>
