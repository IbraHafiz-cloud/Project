<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">

    <ImageView
        android:id="@+id/landingImage"
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/eskills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tingkatkan Potensi, Bangun Karir"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/landingImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/deskripsi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pelatihan Prakerja Untuk Sukses Profesional"
        android:textSize="15sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/deskripsi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="209.7dp"
        />

    <LinearLayout
        android:id="@+id/authButton"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/signin"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded"
            android:text="Sign In"
            android:textSize="20sp"
            android:elevation="8dp"
            android:shadowColor="#80000000" />

        <Button
            android:id="@+id/signup"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded"
            app:layout_constraintTop_toBottomOf="@+id/signin"
            android:layout_marginTop="10dp"
            android:text="Sign Up"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>